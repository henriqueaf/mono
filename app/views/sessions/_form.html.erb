<%= form_for :session, :url => session_path, :html => { :class => 'form-horizontal' } do |form| %>
  <div class='control-group'>
    <%= form.label :email, t('activerecord.attributes.user.email', :default => 'Email'), :class => 'control-label' %>
    <div class="controls">
      <%= form.text_field :email, :class => 'text_field input-large focus' %>
    </div>
  </div>

  <div class='control-group'>
    <%= form.label :password, t('activerecord.attributes.user.password', :default => 'Password'), :class => 'control-label' %>
    <div class="controls">
      <%= form.password_field :password, :class => 'text_field input-large' %>
    </div>
  </div>

  <p><%= form.submit t('helpers.titles.manager', :default => 'Manager'), :id => 'manager', :class => 'btn btn-large btn-block btn-warning' %></p>
  <p><%= form.submit t('helpers.titles.teacher', :default => 'Teacher'), :id => 'teacher', :class => 'btn btn-large btn-block btn-primary' %></p>
  <p><%= form.submit t('helpers.titles.student', :default => 'Student'), :id => 'student', :class => 'btn btn-large btn-block btn-success' %></p>

<% end %>
